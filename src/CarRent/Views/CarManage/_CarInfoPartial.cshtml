@model CarRent.Models.ManageCarViewModel
<div class="form-group">
    <label asp-for="BrandId" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        @Html.DropDownListFor(m => m.BrandId, new SelectList(Model.Brands, "Id", "Name", Model.BrandId), "Select Brand", new { @id = "brandList", @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label asp-for="ModelId" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <select id="modelList" class="form-control" name="@Html.NameFor(m => m.ModelId)" value="@Model.ModelId">
            <option value="">Select Car Model</option>
            @foreach (var m in Model.Models)
            {

                @:<option value="@m.Id" brand-id="@m.CarBrandId" @(m.Id == Model.ModelId ? "selected='selected'" : "")>@m.Name</option>
            }
        </select>
    </div>
</div>
<div class="form-group">
    <label asp-for="BodyType" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        @Html.DropDownListFor(m => m.BodyType,
                new SelectList(Enum.GetNames(typeof(CarRent.DataAccess.Models.CarBodyTypes)), "", "", Model.BodyType), "Select Body Type",
                new { @class = "form-control" })
    </div>
</div>
<div class="form-group">
    <label asp-for="Year" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Year" class="form-control" type="number" min="@Model.MinYear" max="@Model.MaxYear" />
    </div>
</div>
<div class="form-group">
    <div class="col-md-11">
        <button type="submit" class="btn btn-primary" style="float:right">Save</button>
    </div>
    <div class="col-md-1">
        <a asp-action="Index" class="btn btn-default">Cancel</a>
    </div>
</div>