@model CarRent.Models.CustomerViewModel
@{ ViewBag.Title = "Create Customer";}

<h2>@ViewBag.Title</h2>

<div asp-validation-summary="ValidationSummary.All" class="text-danger"></div>
<form asp-controller="Customer" asp-action="Create" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form" novalidate>
    
    <div class="form-group">
        <label asp-for="Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Name" class="form-control" type="text" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Surname" class="form-control" type="text" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Email" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" type="email" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="PhoneNumber" class="form-control" type="tel" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-11">
            <button type="submit" class="btn btn-primary" style="float:right">Create</button>
        </div>
        <div class="col-md-1">
            <a asp-action="Index" class="btn btn-default">Cancel</a>
        </div>
    </div>
</form>
